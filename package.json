{
    "name": "generator-mono-serverless",
    "version": "0.0.0",
    "description": "Lerna monorepo to contain serverless lambda functions",
    "homepage": "https://github.com/zotoio/generator-mono-serverless",
    "author": {
        "name": "wyvern8",
        "email": "wyvern@smartcreations.com.au",
        "url": "https://zoto.io"
    },
    "files": ["generators"],
    "main": "generators/index.js",
    "keywords": ["lambda", "yeoman-generator", "serverless", "typescript"],
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "coveralls": "^3.0.0",
        "eslint": "^4.1.0",
        "eslint-config-prettier": "^2.4.0",
        "eslint-config-xo": "^0.22.1",
        "eslint-plugin-prettier": "^2.2.0",
        "faker": "^4.1.0",
        "husky": "^0.14.3",
        "jest": "^22.4.3",
        "jest-cli": "^22.4.3",
        "lint-staged": "^7.0.4",
        "nsp": "^3.2.1",
        "prettier": "^1.7.0",
        "semantic-release": "^15.1.7",
        "yeoman-assert": "^3.1.0",
        "yeoman-test": "^1.7.0",
        "commitizen": "^2.9.6",
        "cross-env": "^5.1.3",
        "cz-conventional-changelog": "^2.1.0"
    },
    "dependencies": {
        "chalk": "^2.1.0",
        "yeoman-generator": "^2.0.1",
        "yosay": "^2.0.1"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "scripts": {
        "prepublish": "nsp check",
        "pretest": "eslint . --fix",
        "precommit": "lint-staged",
        "test": "jest",
        "ci": "jest --coverage",
        "commit": "./node_modules/.bin/git-cz",
        "semantic-release": "semantic-release"
    },
    "lint-staged": {
        "*.js": ["eslint --fix", "git add", "jest --bail --findRelatedTests"],
        "*.json": ["prettier --write", "git add"]
    },
    "eslintConfig": {
        "extends": ["xo", "prettier"],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "useTabs": false,
                    "printWidth": 120,
                    "tabWidth": 4,
                    "singleQuote": true
                }
            ]
        },
        "plugins": ["prettier"]
    },
    "repository": "zotoio/generator-mono-serverless",
    "license": "MIT"
}
